<!-- ほとんどindexからの引用なのでcssはindexと共通　-->

<h1>Editing Book</h1>



<%= form_with model: @book do |f| %>

<% if @book.errors.any? %>
<div id="error_explanation">
  <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<div class="form">
 <div class="form-item">
  <label for="book_title">Title</label>
  <%= f.text_field :title, id:"book_title", class:"book_title" %>
 </div>
 <div class="form-item">
  <label for="book_body">body</label>
  <%= f.text_area :body, id:"book_body", class:"book_body" %>
 </div>
 <div class="form-item">
  <%= f.submit 'Update Book' %>
 </div>
</div>
<% end %>

<!-- showと共通 -->

<div class="show-link">
  <%= link_to "Show", book_path(@book.id), class: "link" %>
    |
  <%= link_to "Back", books_path, class: "link" %>
</div>
