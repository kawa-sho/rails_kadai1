<!-- ほとんどindexからの引用なのでcssはindexと共通　-->

<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
<div class="form">
 <div class="form-item">
  <p>Title</p>
  <%= f.text_field :title %>
 </div>
 <div class="form-item">
  <p>body</p>
  <%= f.text_area :body %>
 </div>
 <div class="form-item">
  <%= f.submit 'Update Book' %>
 </div>
</div>
<% end %>

<!-- showと共通 -->

<div class="show-link">
  <%= link_to "Show", book_path(@book.id) %>
    |
  <%= link_to "Back", books_path %>
</div>
